extends layout

block content
    #signin-div
        h1= title
        //p Welcome to #{title}, this is our test site little test test again!!
        p#err-message #{error}

        form#signin-form(action="/signin", method="POST")
            input#input-username(type="text", placeHolder="UserName", name="username")
            input#input-user-password(type="password", placeHolder="Password", name="password")
            button#button-submit(type="submit") Sign In
        p No account?  
            a#login-link(href="/signup") Create.


