extends layout

block content
    h1= title
    p Welcome to #{title}, this is our test site little test

    // wapper
    #wrapper
        // user info
        #userInfo
            h2 user info
            p
                strong Name:
                | <span id='userInfoName'></span>
                br
                strong Age:
                | <span id='userInfoAge'></span>
                br
                strong Gender:
                | <span id='userInfoGender'></span>
                br
                strong Location:
                | <span id='userInfoLocation'></span>
                br
        // /user info
        //UserList
        h2 user list
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete
                tbody
                    //USER LIST
        //add user
        h2 add user
        #addUser
            fieldset
                input#inputUserName(type='text', placeHolder='UserName')
                input#inputUserEmail(type='text', placeHolder='UserEmail')
                br
                input#inputUserFullName(type='text', placeHolder='UserFullName')
                input#inputUserAge(type='text', placeHolder='Age')
                br
                input#inputUserGender(type='text', placeHolder='UserGender')
                input#inputUserLocation(type='text', placeHolder='UserLocation')
                br
                button#btnAddUser Add User
        h2 update user
        #updateUser
            fieldset
                input#inputUserId(type='hidden')
                input#inputUserName(type='text', placeHolder='UserName')
                input#inputUserEmail(type='text', placeHolder='UserEmail')
                br
                input#inputUserFullName(type='text', placeHolder='UserFullName')
                input#inputUserAge(type='text', placeHolder='Age')
                br
                input#inputUserGender(type='text', placeHolder='UserGender')
                input#inputUserLocation(type='text', placeHolder='UserLocation')
                br
                button#btnUpdateUser Update User
    // /wapper


